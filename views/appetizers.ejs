<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Appetizers</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
	<script src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
    <script src="http://localhost:3000/javascripts/customerDrop.js"></script>

    <link href="http://localhost:3000/stylesheets/customerStyle.css" rel="stylesheet">
</head>
<body>



<h1>Appetizers</h1>
<br><br>
<div class="container">
	<div class="row">
	<% menu_items.forEach(function(item, index){ %>
		<div class="col-md-6">
			<h3><%= item.Name %></h3>
			<h5><%= item.Price %></h5>
			<hr style="clear:both;"/>
			<p><img src="#" alt=<%= item.Name %> style="float:left" width="290" height="200" hspace="20">
			<%= item.Description %></p>
			<button type="button" class="btn btn-secondary btn-sm">Add to Order</button>
			<hr style="clear:both;"/>
		</div>
		<% if((index + 1) > 0 && (index + 1) % 2 == 0){ %>
			</div>
			<div class="row">
		<% } %>
	<% }) %>
	</div>
</div>

<br><br><br>
    <!--Assistance Buttons-->
    <% include partials/assistance %>


</body>

<footer>
    <!-- Navigation -->
    <% include partials/guestnavbar %>
</footer>
</html>