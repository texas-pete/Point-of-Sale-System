<!DOCTYPE html>

<html>
    <head>
        <% include partials/head %>
        <link rel="stylesheet" href="http://localhost:3000/stylesheets/kitchenstaff/newkitchen.css">
        <% include partials/script %>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        
    </head>


<!-- Sidebar -->

<div class="sidebar">
      <% orderItems.forEach(function(item, index){ %>
            <div class= "order_display_sidebar" id='<%= item._id %>'> 
                  <h5>  Table #<%= item.table %> <div id = '__<%= item._id %>'class = "status_indicator"></div></h5>
            </div>
      <% }) %>
</div>
 
<body>
<!--Main Page-->
<div class="main">
    <div class="button" id = "Ready">
          <h3>Ready</h3>
    </div>
    <div class="button" id = "Cooking">
          <h3>Cooking</h3>
    </div> 
</div> 
<div>
  <div>
      <% orderItems.forEach(function(item, index){ %>
        <% for(let j = 0; j < item.orderedItems.length; j++){  %> 
            <div id='_<%= item._id %>' class= "order_display_main"> 
                  <h5> Menu Item ID: <span id= '___<%= item._id %>'><%=orderItems[index].orderedItems[j].item%></span></h5>
                  <h5> Notes and Allergies: <%= orderItems[index].orderedItems[j].notes %></h5>
            </div>
      <% } %>  
      <% }) %>
      </div>
</div>
</body>


<footer>
  <% include partials/navbar %>
</footer>
<script src="http://localhost:3000/javascripts/kitchenstaff.js"></script>
</html>
