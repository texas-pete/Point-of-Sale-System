<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Table # <label id='tblNumber'></label></h3>
            </div>

            <ul class="list-unstyled components">
                <li class="active">
                    <a href="#" onclick="hideContent('content')">Table View</a>
                </li>
                <li>
                    <a href="#" onclick="hideContent('orderinfo')">Order Info</a>
                </li>
                <li>
                    <a href="#" onclick="hideContent('service')">Service Request</a>
                </li>
            </ul>
        </nav>

        <!-- tables -->
        <div id="content">
            <!-- Table Grid -->
            <!-- First ROW -->
            <div class="table-layout">
                <% for(let i =1; i<9; i++){ %>
                <div class="box" id='box<%= i %>' class="container-fluid">
                    <button class="boxButton" type="button">
                        <span>
                            <%= i %> </span>
                    </button>
                </div>
                <% } %>
            </div>
            <div class="table-layout">
                <% for(let i =9; i<17; i++){ %>
                <div class="box" id='box<%= i %>' class="container-fluid">
                    <button class="boxButton" type="button">
                        <span>
                            <%= i %> </span>
                    </button>
                </div>
                <% } %>
            </div>
            <div class="table-layout">
                <% for(let i =17; i<25; i++){ %>
                <div class="box" id='box<%= i %>' class="container-fluid">
                    <button class="boxButton" type="button">
                        <span>
                            <%= i %> </span>
                    </button>
                </div>
                <% } %>
            </div>

        </div>

        <div id="service" style="display: none">
            <div id="refillsDiv">
                <p> Refills Needed: </p>
                <ul id="refillsList">
                    <li>Sprite</li>
                    <li>Milk</li>
                    <li>Water</li>
                    <li>Water</li>
                </ul>

            </div>
            <button id="clearRefills"> Clear Refills</button>
            <button id="clearServiceRequest"> Clear Service Request</button>
            <button id="requestManager"> Request Managerial Assistance </button>
            <button id="adjustTotal"> Adjust Total </button>
        </div>

        <div id="orderinfo" style="display: none">
            <div id="entities">
            </div>
        </div>
</body>
<footer>
    <% include partials/navbar %>
